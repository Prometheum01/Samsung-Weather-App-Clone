<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="16:00"
        android:id="@+id/tv_hour"
        android:fontFamily="@font/sarabun_regular"
        android:textColor="@color/onPrimaryMain"
        android:textSize="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_1000"
        android:id="@+id/img_condition"
        app:tint="@color/onPrimaryMain"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"/>

    <TextView
        android:text="29'"
        android:id="@+id/tv_temperature"
        android:fontFamily="@font/sarabun_regular"
        android:textColor="@color/onPrimaryMain"
        android:textSize="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.rurouni.weatherapp.ui.view.components.TemperatureGraph
        android:id="@+id/graph_temperature"
        app:lineColor="#E2CC3E"
        app:circleColor="@color/onPrimaryMain"
        app:strokeWidth="2dp"
        app:startAndEndPadding="4dp"
        app:topAndBottomPadding="12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp">

    </com.rurouni.weatherapp.ui.view.components.TemperatureGraph>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_rain_percentage"
            android:layout_gravity="center"
            app:tint="@color/onPrimaryMain"
            android:src="@drawable/ic_half_drop"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_rain_percentage"
            android:text="%75"
            android:layout_gravity="center"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/onSecondaryMain"
            android:fontFamily="@font/sarabun_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>