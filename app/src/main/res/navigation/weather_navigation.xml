<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_navigation"
    app:startDestination="@id/mainPageView">

    <fragment
        android:id="@+id/mainPageView"
        android:name="com.rurouni.weatherapp.ui.view.fragments.MainPageView"
        android:label="MainPageView" >
        <action
            android:id="@+id/action_mainPageView_to_detailView"
            app:destination="@id/detailView"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailView"
        android:name="com.rurouni.weatherapp.ui.view.fragments.DetailView"
        android:label="fragment_detail_view"
        tools:layout="@layout/fragment_detail_view" >
        <action
            android:id="@+id/action_detailView_to_mainPageView"
            app:destination="@id/mainPageView" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument android:name="location" />
    </fragment>
</navigation>